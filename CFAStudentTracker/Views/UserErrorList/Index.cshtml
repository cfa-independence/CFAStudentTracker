@model IEnumerable<CFAStudentTracker.Models.Processing>

@{
    ViewBag.Title = "Index";
}

<h2>Errors</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("SSN")
                    </th>
                    <th>
                        @Html.DisplayName("Type")
                    </th>
                    <th>
                        @Html.DisplayName("Date Complete")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("Open", "../FileOpen/OpenFile", new { id = item.ProcID }, htmlAttributes: new { @class = "btn btn-primary" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Record.StudentFile.FileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Record.StudentFile.FileSSN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Record.FileType.TypeDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProcUserComplete)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.col-lg-12 -->
</div>
