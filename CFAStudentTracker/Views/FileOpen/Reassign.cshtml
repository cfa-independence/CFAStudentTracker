@model CFAStudentTracker.Models.Processing

@{
    ViewBag.Title = "Reassign";
}

<h2>Reassign</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.Hidden("mainReturn", new { mainReturn = ViewBag.mainReturn })
        <h4>Processing</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProcID)
        @Html.HiddenFor(model => model.InFilingCabinet)
        @Html.HiddenFor(model => model.ProcInQueue)
        @Html.HiddenFor(model => model.ProcToUser)
        @Html.HiddenFor(model => model.ProcUserComplete)
        @Html.HiddenFor(model => model.QueueID)
        @Html.HiddenFor(model => model.RecordID)
        @Html.Hidden("CurrentUser", Model.Username)

        <div class="form-group">
            @Html.LabelFor(model => model.Username, "Username", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Username",null,"Put Back In Queue", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reassign" class="btn btn-default" />
            </div>
        </div>
    </div>
}

