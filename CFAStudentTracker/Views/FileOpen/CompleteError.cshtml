@model CFAStudentTracker.Models.ProcessingError

@{
    ViewBag.Title = "Complete Error";
}

<h2>Complete Error</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ErrorID)
        @Html.HiddenFor(model => model.ProcID)
        @Html.HiddenFor(model => model.ErrorTypeID)


        <div class="form-group">
            @Html.LabelFor(model => model.ErrorComID, "ErrorComID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ErrorComID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ErrorComID, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.DateFound)
        @Html.HiddenFor(model => model.DateComplete)
        @Html.HiddenFor(model => model.Note)
        @Html.Hidden("previousPage")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Complete" class="btn btn-default" />
            </div>
        </div>
    </div>
}
