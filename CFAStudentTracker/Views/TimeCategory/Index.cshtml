@model IEnumerable<CFAStudentTracker.Models.TimeCategory>

@{
    ViewBag.Title = "Time Categories";
}

<h2>Time Categories</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{ if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Time Category Title")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeCategoryTitle)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TimeCategoryId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TimeCategoryId })
                    </td>
                </tr>
            }

        </table>
    }
}