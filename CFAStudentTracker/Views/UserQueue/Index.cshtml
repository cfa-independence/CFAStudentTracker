@model IEnumerable<CFAStudentTracker.Models.UserQueue_Result>

@{
    ViewBag.Title = "Pending Files";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title.</h1>
    </div>
    <div class="col-lg-12">
        <p>
            <strong>Productivity</strong>
            <span class="pull-right text-muted">Production Hours @ViewBag.CompletedToday</span>
        </p>
            <div style="border-left:3px solid green; height:15px; margin-left: 66.66%">8 Hours</div>
        
        <div class="progress progress-striped active">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="@ViewBag.CompletedToday" aria-valuemin="0" aria-valuemax="12" style="width: @(ViewBag.CompletedToday / 12 * 100)%">

            </div>

        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayName("Queue")</th>
                    <th>@Html.DisplayNameFor(model => model.SSN)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-sm-1">@Html.ActionLink("Open", "../FileOpen/OpenFile", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                        <td>@Html.DisplayFor(modelItem => item.QueueName)</td>
                        <td>@Html.DisplayFor(modelItem => item.SSN)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.col-lg-12 -->
</div>

  

